<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_dialog"
        android:layout_width="240dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/endTextView"
            style="@style/BasicText"
            android:layout_margin="50dp"
            tools:text="Yellow Wins!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.colorful.game.core.library.CustomImageButton
            android:id="@+id/buttonAgain"
            android:layout_width="120dp"
            android:src="@drawable/button_next"
            android:layout_marginTop="40dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endTextView" />

        <com.colorful.game.core.library.CustomImageButton
            android:id="@+id/buttonExit"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:src="@drawable/button_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAgain" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.colorful.game.core.library.CustomImageButton
        android:id="@+id/buttonClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:src="@drawable/button_close"/>

</FrameLayout>